{
  "name": "vue-data-storage-sqlite-hook",
  "version": "1.0.3",
  "description": "Vue Hook for Capacitor Data Storage SQLite",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jepiqueau/vue-data-storage-sqlite-hook.git"
  },
  "keywords": [
    "Vue",
    "Hook",
    "Capacitor",
    "Storage",
    "SQLite"
  ],
  "files": [
    "dist/"
  ],
  "main": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "scripts": {
    "start": "node scripts/start.js",
    "build": "npm run clean && npm run transpile && npm run copy-package && npm run docgen",
    "copy-package": "cp ./package.json ./dist/package.json",
    "package": "npm pack ./dist",
    "deploy": "npm run build && npm test && np",
    "rollup": "rollup --config rollup.config.js",
    "transpile": "tsc --module ES2015 --target es2017 --outDir dist",
    "clean": "rimraf dist",
    "build-old": "node scripts/build.js",
    "docgen": "docgen --api StorageSQLiteHook --output-readme docs/APIHook.md",
    "test": "jest"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {}
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "@capacitor/core": "^3.4.3",
    "capacitor-data-storage-sqlite": "^3.4.3"
  },
  "devDependencies": {
    "@capacitor/core": "^3.4.3",
    "@capacitor/docgen": "^0.0.18",
    "@types/jest": "^27.0.2",
    "capacitor-data-storage-sqlite": "3.4.3",
    "conventional-changelog": "^3.1.24",
    "eslint": "^7.25.0",
    "jest": "^27.3.0",
    "replace": "^1.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.0.5",
    "uglify-js": "^3.12.5"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist-transpiled",
      "dist",
      "test-app"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  },
  "author": "Qu√©au Jean Pierre",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jepiqueau/vue-data-storage-sqlite-hook/issues"
  },
  "homepage": "https://github.com/jepiqueau/vue-data-storage-sqlite-hook#readme"
}
